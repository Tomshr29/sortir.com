{% extends 'base.html.twig' %}

{% block title %}{{ user.username }} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="otherUser">
            <h1>{{ user.username }}</h1>
            <div class="profil">
                <p>Prénom : {{ user.firstname }}</p>
                <p>Nom : {{ user.lastname }}</p>
                <p>Téléphone : {{ user.phoneNumber }}</p>
                <p>Email : {{ user.email }}</p>
                <p>Campus : {{ user.campus.name }}</p>
            </div>
        </div>
    </div>
{% endblock %}
