{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="otherUser">
            <h1>{{ app.user.username }}</h1>
            <div class="profil">
                <p>Prénom : {{ app.user.firstname }}</p>
                <p>Nom : {{ app.user.lastname }}</p>
                <p>Téléphone : {{ app.user.phoneNumber }}</p>
                <p>Email : {{ app.user.email }}</p>
                <p>Campus : {{ app.user.campus.name }}</p>
            </div>
        </div>
    </div>
{% endblock %}
