{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mon profil{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ app.user.username }}</h1>
        <div class="profil">
            {{ form_start(form_edit_profile)}}
            {{ form_widget(form_edit_profile) }}

            <button type="submit" class="btn">Modifier</button>
            {{ form_end(form_edit_profile) }}
        </div>
        <a href="{{ path('user_edit_password', { 'id' : app.user.id }) }}" title="Modifier mot de passe"><button>Modifier mot de passe</button></a>
    </div>
{% endblock %}
