{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mon profil{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ app.user.username }}</h1>
        <div class="profil">
            <p>Campus : {{ app.user.campus.name }}</p>
            <p>Email : {{ app.user.email }}</p>
            <p>Pseudo : {{ app.user.username }}</p>
            <p>Prénom : {{ app.user.firstname }}</p>
            <p>Nom : {{ app.user.lastname }}</p>
            <p>Téléphone : {{ app.user.phoneNumber }}</p>
            <label>Photo de profil</label>
            <img alt="Photo user" style="height: 80px" src="{{ asset('images/' ~ app.user.imageFileName) }}"/>
        </div>
        <a href="{{ path('user_edit', { 'id' : app.user.id }) }}" title="Modifier mon Profil"><button class="button user_btn">Modifier mes informations</button></a>
        <a href="{{ path('user_edit_password', { 'id' : app.user.id }) }}" title="Modifier mot de passe"><button class="button user_btn">Modifier mot de passe</button></a>
    </div>
{% endblock %}
