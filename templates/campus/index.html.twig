{% extends 'base.html.twig' %}

{% block title %}Gérer les campus{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Gérer les campus</h1>
        <h2>Filtrer les sites</h2>
        <div>
            <label>Le nom contient :</label>
            <input type="search">
        </div>
        <button>Rechercher</button>
        <h2>Liste des Campus</h2>

        <ul>
            {% for campus in campusList %}
                <li>{{ campus.name }}</li>
            {% endfor %}
        </ul>

        {{ form_start(campusForm) }}
        {{ form_widget(campusForm) }}
        <button type="submit">Ajouter Campus</button>
        {{ form_end(campusForm) }}

    </div>
{% endblock %}
